  month = oct,
  year = {2010},
  keywords = {biodiversity,fishery profit,ocean policy,sustainability},
  pages = {18286--18293},
  file = {Snapshot:/Users/danovando/Library/Application Support/Firefox/Profiles/788wox8h.default-1393438973128/zotero/storage/FTPRZT3D/18286.html:text/html}
}

